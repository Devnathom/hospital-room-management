# Database
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=hospital_room_mgmt

# JWT (our custom auth)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# NextAuth (OAuth social login)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-change-this

# Google OAuth
# สร้างที่: https://console.cloud.google.com/apis/credentials
# Authorized redirect URI: http://localhost:3000/api/auth/callback/google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Facebook OAuth
# สร้างที่: https://developers.facebook.com/apps/
# Valid OAuth Redirect URI: http://localhost:3000/api/auth/callback/facebook
FACEBOOK_CLIENT_ID=your_facebook_app_id
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret

# LINE Login
# สร้างที่: https://developers.line.biz/console/
# Callback URL: http://localhost:3000/api/auth/callback/line
LINE_CLIENT_ID=your_line_channel_id
LINE_CLIENT_SECRET=your_line_channel_secret

# SMTP Email (สำหรับส่งอีเมลรีเซ็ตรหัสผ่าน)
# Gmail: เปิด "App Password" ที่ https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_gmail@gmail.com
SMTP_PASS=your_gmail_app_password
